.loading-wrapper.container.main-container
  %loading{ng-if: '!userPage.user'}
  %main.user-page.main-container{ng-if: 'userPage.user'}
    .user-page__profile
      .user-page__left
        %user_avatar{user: 'userPage.user', size: 'featured'}
      .user-page__right
        %h2.user-page__name {{userPage.user.name}}
        %h4.user-page__username @{{userPage.user.username}}

        %h2.lmo-h2.user-page__groups{translate: 'common.groups'}
        .user-page__groups{ng-repeat: 'group in userPage.user.groups() | orderBy: "fullName" track by group.id'}
          %a{lmo-href-for: 'group'} {{group.fullName}}
        %loading{ng-if: 'userPage.loadGroupsExecuting'}
      .clearfix
